{
    "name": "amad/watcher",
    "description": "Run arbitrary command on file change. watch-and-runner",
    "type": "project",
    "license": "MIT",
    "homepage": "https://amad.github.io/watcher",
    "keywords": [
        "watch",
        "watcher",
        "resource",
        "watch-and-runner"
    ],
    "authors": [
        {
            "name": "Ahmad Samiei",
            "homepage": "http://samiei.org",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "bin": ["bin/watcher"],
    "autoload": {
        "psr-4": {
            "Amad\\Watcher\\": "src/"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "require": {
        "php": ">=5.5.9",
        "symfony/finder": "2.8.*|3.*",
        "symfony/console": "2.8.*|3.*",
        "symfony/process": "2.8.*|3.*"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*"
    }
}
